<Window x:Class="Store_client.ConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connecting..." Height="145.433" Width="212.731" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closing="Window_Closing" >
    <Grid >
        <Label Content="IP Адресс:" HorizontalAlignment="Left" Margin="9,11,0,0" VerticalAlignment="Top"/>
        <Label Content="Порт:" HorizontalAlignment="Left" Margin="9,42,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="ip_adress" HorizontalAlignment="Right" Height="23" Margin="0,13,7,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="port" HorizontalAlignment="Right" Height="23" Margin="0,45,7,0" TextWrapping="Wrap" Text="4505" VerticalAlignment="Top" Width="120"/>
        <Button Content="Ok" HorizontalAlignment="Right" Margin="0,77,87,0" VerticalAlignment="Top" Width="75" Click="Button_OK_Click"/>
        <Button Content="Выход" HorizontalAlignment="Right" Margin="0,77,7,0" VerticalAlignment="Top" Width="75" Click="Button_Exit_Click" />
    </Grid>
</Window>
